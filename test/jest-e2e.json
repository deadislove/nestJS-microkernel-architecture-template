{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "moduleNameMapper": {
    "^@core/(.*)$": "<rootDir>/../src/core/$1",
    "^@plugins/(.*)$": "<rootDir>/../src/plugins/$1",
    "^@config/(.*)$": "<rootDir>/../src/config/$1"
  }
}